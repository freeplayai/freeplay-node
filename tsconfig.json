{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES6",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist/esm",
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
